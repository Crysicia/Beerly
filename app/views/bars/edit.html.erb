<h1>Bars#edit</h1>
<p>Find me in app/views/bars/edit.html.erb</p>



<h2> Ma carte </h2>

<h3> Pression </h3>

<% @draft_beers.each do |item| %>
  <p> <%= Beer.find(item.beer_id).name %> -
  Prix pinte:  <%= item.pint_price %>,
  Prix demi: <%= item.half_pint_price %> </p>
<% end %>

<h3> Bouteille </h3>
<% @bottle_beers.each do |item| %>
  <p> <%= Beer.find(item.beer_id).name %> - 
  Prix bouteille: <%= item.bottle_price %> </p>
<% end %>


<h2> Ajouter une bière à ma carte </h2>

<%= link_to "Ajouter une bière à ma carte", new_beer_list_path, id: "new_link", remote: true %>

<h2> Mes bières </h2>
  <div class="beers" id="beers_on_beerlist"
    <%= render @beers_on_beerlist %>
  </div>
<h2> Mes bières archivées </h2>
  <div class="beers" id="beers_archived"
    <%= render @beers_archived %>
  </div>






<h2> Mon bar </h2>

<%= form_for @bar, url = {action: "update"} do |f| %>
  <%= f.label :nom %>
  <%= f.text_field :name %>
  <%= f.label :adresse %>
  <%= f.text_field :address %>
  <%= f.label :photo %>
  <%= f.text_field :photo %>
  <%= f.label :opening_times %>
  <%= f.text_area :opening_time %>
  <%= f.label :happy_hours %>
  <%= f.text_area :happy_hours %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "update" %> 
<% end %>
