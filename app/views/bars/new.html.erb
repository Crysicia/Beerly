<h1>Ajouter votre bar</h1>

<%= form_with model: @bar do |f| %>

<div class="form-group">
   	<%= f.label :Image %>:
    <%= f.file_field :image %><br/>
</div>



<div class="form-group">
   	<%= f.label :Name %>:
    <%= f.text_field :name, :class => "form-control" %><br/>
</div>

<div class="form-group">
   	<%= f.label :Address %>:
    <%= f.text_field :address, :class => "form-control" %><br/>
</div>


<div class="form-group">
   	<%= f.label :Description %>:
    <%= f.text_field :description, :class => "form-control" %><br/>
</div>

<%= f.label :Ouverture %>:
<%= f.datetime_select :last_request_at %><br/>
  
<%= f.submit :class => "btn btn-primary"%>

<% end %>
