<div class="container mt-5 mb-5">
<div class="row">
  <div class="col-lg-6 col-sm-12">

<h1 class="mb-5">Ajouter votre bar</h1>

<%= form_with model: @bar do |f| %>

<div class="form-group">
   	<%= f.label :Name %>:
    <%= f.text_field :name, :class => "form-control" %><br/>
</div>

<div class="form-group">
   	<%= f.label :Image_url %>:
    <%= f.text_field :photo, :class => "form-control" %><br/>
</div>

<div class="form-group">
   	<%= f.label :Address %>:
    <%= f.text_field :address, :class => "form-control" %><br/>
</div>

<div class="form-group">
   	<%= f.label :Description %>:
    <%= f.text_area :description, :class => "form-control" %><br/>
</div>

<div class="form-group">
   	<%= f.label :Happyhours %>:
    <%= f.text_field :happy_hours, :class => "form-control" %><br/>
</div>

<div class="form-group">
   	<%= f.label :Horaires %>:
    <%= f.text_field :opening_time, :class => "form-control" %><br/>
</div>


  
<%= f.submit :class => "btn btn-primary"%>

<% end %>

</div>
</div>
</div>
