<div class="container-fluid mt-3">

  <div class="container">
    <h2> Ma carte </h2>
      <div class="row">

      <div class="col-lg-6">
        <h4 class="mt-3"> Pression</h4>
        <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Bière</th>
            <th scope="col">Prix pinte</th>
            <th scope="col">Prix demi</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @draft_beers.sort { |a,b| Beer.find(a.beer_id).name <=> Beer.find(b.beer_id).name }.each do |item| %>
            <tr> 
              <td><%= Beer.find(item.beer_id).name %></td>
              <td><%= item.pint_price %></td>
              <td><%= item.half_pint_price %></td>
              <td>
                <%= link_to "modifier les prix", edit_managers_beer_list_path(item.id), type:"button", class:"btn btn-secondary" %>
                <%= link_to "supprimer", managers_beer_list_path(item.id), method: :delete, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-danger" %>
                <%= link_to "archiver", archive_managers_beer_list_path(item.id), method: :archive, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-warning" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-lg-6">
        <h4 class="mt-3">Bouteille</h4>
        <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Bière</th>
            <th scope="col">Prix bouteille</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @bottle_beers.sort { |a,b| Beer.find(a.beer_id).name <=> Beer.find(b.beer_id).name }.each do |item| %>
            <tr> 
              <td><%= Beer.find(item.beer_id).name %></td>
              <td><%= item.bottle_price %></td>
              <td>
                <%= button_to "modifier le prix", edit_managers_beer_list_path(item.id), type:"button", class:"btn btn-secondary" %>
                <%= button_to "supprimer", managers_beer_list_path(item.id), method: :delete, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-danger" %>
                <%= button_to "archiver", archive_managers_beer_list_path(item.id), method: :archive, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-warning" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        </div>
    </div>    
  </div>

  <div class="container">
    <%= render "beers/index", locals: {beers: @beers, beerlist: @beerlist} %>
  </div>

  <div class="container">
    <h3 class="mt-3 mb-3">Mes bières archivées</h3>
    <div class="row">
      <div class="col-lg-6">    
        <h4 class="mt-3"> Bières Pression archivées</h4>
        <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">Bière</th>
                <th scope="col">Prix pinte</th>
                <th scope="col">Prix demi</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% @draft_archived_beers.sort { |a,b| Beer.find(a.beer_id).name <=> Beer.find(b.beer_id).name }.each do |item| %>
                <tr> 
                  <td><%= Beer.find(item.beer_id).name %></td>
                  <td><%= item.pint_price %></td>
                  <td><%= item.half_pint_price %></td>
                  <td>
                    <%= button_to "modifier les prix", edit_managers_beer_list_path(item.id), type:"button", class:"btn btn-secondary" %>
                    <%= button_to "supprimer", managers_beer_list_path(item.id), method: :delete, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-danger" %>
                    <%= button_to "rajouter à la carte", archive_managers_beer_list_path(item.id), method: :archive, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-warning" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>

      <div class="col-lg-6">
        <h4 class="mt-3">Bières Bouteille archivées</h4>
        <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Bière</th>
            <th scope="col">Prix bouteille</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @bottle_archived_beers.sort { |a,b| Beer.find(a.beer_id).name <=> Beer.find(b.beer_id).name }.each do |item| %>
            <tr> 
              <td><%= Beer.find(item.beer_id).name %></td>
              <td><%= item.bottle_price %></td>
              <td>
                <%= button_to "modifier le prix", edit_managers_beer_list_path(item.id), type:"button", class:"btn btn-secondary" %>
                <%= button_to "supprimer", managers_beer_list_path(item.id), method: :delete, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-danger" %>
                <%= button_to "rajouter à la carte", archive_managers_beer_list_path(item.id), method: :archive, data: {confirm: "Vous êtes sûr?"}, type:"button", class:"btn btn-warning" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>      

</div>
