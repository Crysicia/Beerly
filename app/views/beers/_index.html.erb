<h3 class="mt-3 mb-3">Ajouter une bière à la carte</h3>
<div class="col-lg-6 col-md-6 col-8">
<h4>Nom de la bière</h4>
<%= form_tag(managers_beer_lists_path, method: :get) do %>
  <%= text_field_tag :term, params[:term], class:"form-control form-control-lg form-control-borderless" %>
  <%= submit_tag 'Chercher', name: nil, class:"btn btn-primary"  %>
<% end %>
</div>

<% unless @beers == nil %>

<% for beer in @beers %>
<div class="beer">
    <strong> <%= beer.name %> </strong>

<p> Ajouter cette bière à ma carte </p>

<!-- List group -->
<div class="list-group" id="myList" role="tablist">
  <a class="list-group-item list-group-item-action active" data-toggle="list" href="#draft" role="tab">Pression</a>
  <a class="list-group-item list-group-item-action" data-toggle="list" href="#bottle" role="tab">Bouteille</a>
</div>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="draft" role="tabpanel">
  <%= form_for @beerlist, url: url_for(controller: 'beer_lists', action: 'create') do |f| %>
    <%= f.hidden_field :beer_id, :value => beer.id %>
    <%= f.label :Prix_pinte %>
    <%= f.number_field :pint_price %> </br>
    <%= f.label :Prix_demi %>
    <%= f.number_field :half_pint_price %>
    <%= f.submit "Ajouter" %>
  <% end %>
  </div>
  <div class="tab-pane" id="bottle" role="tabpanel">
  <%= form_for @beerlist, url: url_for(controller: 'beer_lists', action: 'create') do |f| %>
    <%= f.hidden_field :beer_id, :value => beer.id %>
    <%= f.label :Prix_bouteille %>
    <%= f.number_field :bottle_price %> </br>
    <%= f.submit "Ajouter" %>
  <% end %>
  </div>
</div>
</br>
</div>
<% end %>

<% end %>
