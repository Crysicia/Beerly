<div class="jumbotron jumbotron-fluid" id="home">
  <div class="container">
    <h1 class="mt-5 mb-3 text-dark">La bière que tu veux, à côté de chez toi.</h1>
    
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card search card-sm" style="border: none;">
                <div class="card-body row no-gutters align-items-center">
                    <!--end of col-->
                    <div class="col">
                        <input class="form-control form-control-lg form-control-borderless" type="search" placeholder="Quelle bière veux tu déguster aujourd'hui ?">
                    </div>
                    <div class="col-auto">
                        <button id="search" class="fas fa-search" type="submit"></button>
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <%= form_tag map_index_path, method: :get do %>
        <%= text_field_tag 'term', params[:term], placeholder: "Chercher une bière" %>
        <%= submit_tag 'Search!' %>
        <% end %>
        <!--end of col-->
    </div>
  </div>
</div>

