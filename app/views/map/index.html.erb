<style type="text/css">
  html,
  body {
    margin: 0;
    height: 100%;
    width: 100%;
  }

  #map {
    width: 100%;
    height: 100%;
  }

</style>

<div id="map"></div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_maps %>&callback=initMap" type="text/javascript"></script>
<script src="/javascript/lib/gmaps.js"></script>

<script>
  var map = new GMaps({
    div: '#map',
    lat: <%= @geographic_center[0] %>,
    lng: <%= @geographic_center[1] %>
  });
  <% @pubs.each do |pub| %>
  map.addMarker({
    lat: <%= pub.latitude %>,
    lng: <%= pub.longitude %>,
    title: 'Lima',
    infoWindow: {
      content: "<%= pub.address %>"
    }
  });
  <% end %>

</script>
