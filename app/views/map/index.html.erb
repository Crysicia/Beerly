<style type="text/css">
  #map {
    width: 100%;
    height: 100%;
  }

</style>
<div class="container pt-4">
  <h3 class="mb-3">RÃ©sultats</h3>

  <div class="row">
    <div class="col-sm-3 col-md-3 col-lg-3">
      <% @pubs.each do |pub| %>
      <div class="card mb-2">
        <%= image_tag("lager.jpg", class: "card-img-top", alt: "beer") %>
        <div class="card-body">
          <h5>
            <%= pub.name %>
          </h5>
          <p>
            <%= pub.address %>
          </p>
          <p>$$$</p>
          <button class="btn btn-sm btn-primary">Voir le bar</button>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9">
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_maps %>&callback=initMap" type="text/javascript"></script>
<script src="/javascript/lib/gmaps.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script>
  $.getJSON("/json/style.json", function(json) {
    newMap(json);
  });

  function newMap(data) {
    var map = new GMaps({
      div: '#map',
      disableDefaultUI: true,
      styles: data
    });
    var latLong = [];
    <% @pubs.each do |pub| %>
    map.addMarker({
      lat: <%= pub.latitude %>,
      lng: <%= pub.longitude %>,
      title: 'Lima',
      icon: '/img/beer32.png',
      infoWindow: {
        content: "<%= pub.name %>"
      }
    });
    latLong.push({lat: <%= pub.latitude %>,
      lng: <%= pub.longitude %>});
    <% end %>
    map.fitLatLngBounds(latLong);
  };

</script>
