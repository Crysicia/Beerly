
<% provide(:title, 'Beerly | Résultats') %>

<div class="container-fluid mt-3" id="result-beers">
  <%= link_to "Retour à l'accueil", root_path, class:"mt-4 mb-2" %>
  <div class="row no-gutters justify-content-center mt-4 mb-3">
      <div class="col-8 col-md-8 col-lg-8">
              <%= form_tag map_index_path, method: :get do %>
              <%= text_field_tag 'term', params[:term], placeholder: "Quelle bière veux tu déguster aujourd'hui?", class:"form-control form-control-lg form-control-borderless" %>
      </div>
      <div class="col-4 col-md-4 col-lg-4">
              <%= submit_tag 'Rechercher', class:"btn btn-sm btn-primary text-light" %>
              <% end %>
      </div>

      <!--end of col-->
  </div>

  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2" id="result-card">
      <% @bars.each do |bar| %>
      <div class="card mb-2">
        <%= image_tag("lager.jpg", class: "card-img-top", alt: "beer") %>
        <div class="card-body">
          <h5>
            <%= bar.name %>
          </h5>
          <p>
            <%= bar.address %>
          </p>
          <%= link_to "Voir", bar_path(bar.id), class:"text-warning" %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-sm-10 col-md-10 col-lg-10" id="map-flow">
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_maps %>&callback=initMap" type="text/javascript"></script>
<script src="/javascript/lib/gmaps.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script>
  $.getJSON("/json/style.json", function(json) {
    newMap(json);
  });

  function newMap(data) {
    var map = new GMaps({
      div: '#map',
      disableDefaultUI: true,
      styles: data
    });
    var latLong = [];
    <% @bars.each do |bar| %>
    map.addMarker({
      lat: <%= bar.latitude %>,
      lng: <%= bar.longitude %>,
      title: 'Lima',
      icon: '/img/beer32.png',
      infoWindow: {
        content: "<%= bar.name %>"
      }
    });
    latLong.push({lat: <%= bar.latitude %>,
      lng: <%= bar.longitude %>});
    <% end %>
    map.fitLatLngBounds(latLong);
  };

</script>
